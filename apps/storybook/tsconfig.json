{
  "extends": "@steding/tsconfig/react-library.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./stories/*"],
      "@steding/ui": ["../../packages/ui/src"],
      "@steding/timeline-scroll": ["../../packages/timeline-scroll/src"]
