{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NEXT_PUBLIC_SANITY_PROJECT_ID",
    "NEXT_PUBLIC_SANITY_DATASET",
    "NEXT_PUBLIC_SITE_URL",
    "NEXT_PUBLIC_CALENDAR_PROVIDER",
    "NEXT_PUBLIC_CALCOM_USERNAME",
    "NEXT_PUBLIC_CALCOM_URL",
    "NEXT_PUBLIC_CALCOM_QUICK_CHAT",
    "NEXT_PUBLIC_CALCOM_DEEP_DIVE",
    "SANITY_API_TOKEN",
    "SANITY_PREVIEW_SECRET",
    "OPENAI_API_KEY",
    "RESEND_API_KEY",
    "CONTACT_EMAIL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "clean": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    }
  }
}
